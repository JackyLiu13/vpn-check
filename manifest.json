{
  "manifest_version": 3,
  "name": "VPN Check",
  "description": "Check if VPN is connected",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://ipwho.is/*",
    "https://www.cloudflare.com/*",
    "https://api.cohere.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon-128.png",
        "icon-32.png"
      ],
      "matches": []
    }
  ]
}